<%- include ('partials/header.ejs') %>

    <body>
        <%- include('partials/navbarHome.ejs') %>
        <div class="container">
            <div class="bg-light p-5 rounded mb-3">
                <h1 class="display-4">Bem vindo</h1>
                <p class="lead">Este é um simples blog</p>
                <hr class="my-4">
                <p>Descrição aqui!</p>
                <a class="btn btn-primary btn-lg" href="#" role="button">Leia mais</a>
            </div>
            
            <% articles.forEach(article =>{ %>
                <div class="card mb-3">
                    <div class="card-header">
                        <%= article.title %>
                    </div>
                    <div class="card-body">
                        <a href="/<%=article.slug%>" class="btn btn-primary">Ler artigo</a>
                    </div>
                </div>
           <% }) %>

           <% if (!isCategoryPage) { %>
           <div class="row m-3">
                <div class="col col-12">
                    <a id="Next-Page" style="float: right" href="articles/page/2">Next Page -></a>
                </div>    
            </div>
            <% } %>
        </div>
    </body>


<%- include ('partials/footer.ejs') %>