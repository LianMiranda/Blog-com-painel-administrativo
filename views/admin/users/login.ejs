<%- include('../../partials/header.ejs') %>
<body>
    <%- include('../../partials/navbar.ejs') %>

    <div class="container">
       
        <div class="card">
            <div class="card-header">
                Login
            </div>
            <div class="card-body">
                <form method="post" action="/auth" class="d-flex flex-column gap-2">
                    <input class="form-control" name="email" type="email" placeholder="email@exemplo.com" required>
                    <% if (message) { %>
                        <div style="color: red;"><%= message %></div>
                    <% } %>
                    <input class="form-control" type="password" name="password" placeholder="********" required>
                    <% if (invalidPasswordMessage) { %>
                        <div style="color: red;"><%= invalidPasswordMessage %></div>
                    <% } %>
                    <button type="submit" class="btn btn-primary">Login</button>
                </form>
            </div>
        </div>
    </div>
</body>
