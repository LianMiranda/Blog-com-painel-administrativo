<%- include('../../partials/header.ejs') %>
<body>
    <%- include('../../partials/navbar.ejs') %>

    <div class="container">
       
        <div class="card">
            <div class="card-header">
                Registrar Usuário
            </div>
            <div class="card-body">
                <form method="post" action="/users/create" class="d-flex flex-column gap-2">
                    <label for="username">Nome de usuário</label>
                    <input class="form-control" type="text" name="username" id="username" placeholder="Fulano da silva" required>
                    
                    <label for="email">Email</label>
                    <input class="form-control" name="email" type="email" id="email" placeholder="email@exemplo.com" required>
                    <% if (message) { %>
                        <div style="color: red;"><%= message %></div>
                    <% } %>

                    <label for="password">Senha</label>
                    <input class="form-control" type="password" name="password" id="password" placeholder="********" required>

                    <div class="form-check">
                      <input class="form-check-input" type="radio" name="userType" id="userCheck" value="2">
                      <label class="form-check-label" for="userCheck">
                          Usuário
                      </label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="userType" id="adminCheck" value="1">
                        <label class="form-check-label" for="adminCheck">
                          Administrador
                        </label>
                      </div>
                    <button type="submit" class="btn btn-primary">Registrar</button>
                </form>
            </div>
        </div>
    </div>
</body>
<%- include('../../partials/footer.ejs') %>