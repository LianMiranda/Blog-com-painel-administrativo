<%- include ('../../partials/header.ejs') %>

<body>
    <%- include ('../../partials/navbar.ejs') %>
    
    <div class="container pt-3">
        <h2>Categorias</h2>
        <a class="btn btn-primary" href="/admin/categories/new">Criar nova categoria</a>
        <table class="table table-dark table-striped mt-3">
            <thead>
                <tr>
                    <th >ID</th>
                    <th>Título</th>
                    <th>Slug</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                <% categories.forEach(category => { %>
                    <tr>
                        <th><%= category.id %></th>
                        <th><%= category.title %></th>
                        <th><%= category.slug %></th>
                        <th class="gap-2 d-flex">
                            <a  class="btn btn-warning" href="/admin/categories/edit/<%= category.id%>">Editar</a>
                            <form method="POST" action="/categories/delete" onsubmit="confirmDelete(event, this)">  
                                <input type="hidden" name="id" value="<%= category.id  %>">
                                <button class="btn btn-danger">Deletar</button>
                            </form>
                        </th>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
</body>

<%- include ('../../partials/footer.ejs') %>

<script>
    function confirmDelete(event, form){
        event.preventDefault(); //Para inpedir a submissao do form   
        var decision = confirm("Deseja deletar a categoria ?");
        if(decision){
            form.submit();
        }else{
            alert('Cancelou')
        }
    }   
</script>