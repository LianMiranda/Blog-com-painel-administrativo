<%- include ('../../partials/header.ejs') %>

<body>
    <%- include ('../../partials/navbarAdmin.ejs') %>
    
    <div class="container">
        <div class="card mt-3">
            <div class="card-header">
                <h2>Cadastro de Artigo</h2>
            </div>
            <div class="card-body">
                <form method="post" action="/articles/save">
                    <input class="form-control mb-3" type="text" name="articleTitle" placeholder="Defina o titulo do artigo" required>
                    <textarea class="form-control" name="body" placeholder="Escreva o artigo aqui!" id="body"></textarea>
                    <label class="mt-3">Categoria</label>
                    <select name="category" class="form-control mt-2">
                        <% categories.forEach((category) => {  %>
                            <option value="<%= category.id %>"><%= category.title %></option>
                        <% }) %>
                    </select>
                    <button type="submit" class="btn btn-success mt-3">Cadastrar</button>
                </form>
            </div>
        </div>
    </div>
</body>

<%- include ('../../partials/footer.ejs') %>

<script src="/tinymce/tinymce.min.js"></script>

<script>
    tinymce.init({
        language: 'pt_BR',
        selector: "#body",
        plugins: "advlist autolink link image lists print preview hr searchreplace wordcount fullscreen insertdatetime media save table paste emoticons",
    })
</script>