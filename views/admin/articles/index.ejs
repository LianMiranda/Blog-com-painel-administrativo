<%- include ('../../partials/header.ejs') %>

<body>
    <%- include ('../../partials/navbarAdmin.ejs') %>
    
    <div class="container pt-3">
        <h2>Artigos</h2>
        <a class="btn btn-primary" href="/admin/articles/new">Criar novo artigo</a>
        <table class="table table-dark table-striped mt-3">
            <thead>
                <tr>
                    <th >ID</th>
                    <th>Título</th>
                    <th>Slug</th>
                    <th>Categoria</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                <% articles.forEach(article => { %>
                <tr>
                    <td><%= article.id %></td>
                    <td><%= article.title %></td>
                    <td><%= article.slug %></td>
                    <td><%= article.category ? article.category.title : "Sem categoria" %></td>
                    <td class="d-flex gap-2">
                        <a class="btn btn-warning" href="/admin/articles/update/<%= article.id %>">Editar</a>
                        <form action="/articles/delete" method="post" onsubmit="confirmDelete(event, this)">
                            <input type="hidden" name="id" value="<%= article.id %>">
                            <button class="btn btn-danger">Deletar</button>
                        </form>
                    </td>
                </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
</body>

<%- include ('../../partials/footer.ejs') %>

<script>
    function confirmDelete(event, form){
        event.preventDefault(); //Para inpedir a submissao do form   
        var decision = confirm("Deseja deletar este artigo ?");
        if(decision){
            form.submit();
        }else{
           console.log("Não cancelou");      
        }
    }   
</script>