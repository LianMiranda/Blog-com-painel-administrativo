<%- include ('../../partials/header.ejs') %>

<body>
    <%- include ('../../partials/navbarAdmin.ejs') %>
    
    <div class="container">
        <div class="card mt-3">
            <div class="card-header">
                <h2>Edição de categoria</h2>
            </div>
            <div class="card-body">
                <form method="POST" action="/articles/update">
                    <input class="form-control mb-3" type="text" name="title" placeholder="Defina o titulo do artigo" value="<%= article.title %>" required>
                    <input type="hidden" name="id" value="<%= article.id %>">
                    <textarea class="form-control" name="body" placeholder="Escreva o artigo aqui!" id="body"><%= article.body %></textarea>
                    <label class="mt-3">Categoria</label>
                    <select name="category" class="form-control mt-2">
                        <% categories.forEach((category) => {  %>
                            <option value="<%= category.id %>" <%= category.id === article.categoryId ? 'selected' : '' %>><%= category.title %></option>                        
                        <% }) %>
                    </select>
                    <button type="submit" class="btn btn-success mt-2">Atualizar</button>
                </form>
            </div>
        </div>
    </div>
</body>

<%- include ('../../partials/footer.ejs') %>

<script src="/tinymce/tinymce.min.js"></script>

<script>
    tinymce.init({
        language: 'pt_BR',
        selector: "#body",
        plugins: "advlist autolink link image lists print preview hr searchreplace wordcount fullscreen insertdatetime media save table paste emoticons",
    })
</script>